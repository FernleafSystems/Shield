<style type="text/css">
	#shield_ga_secret {
		letter-spacing: 5px;
		font-family: monospace;
		font-size: 24px;
		text-shadow: 1px 1px 0 rgba(0, 0, 0, 0.4);
		border: 1px solid rgba(0, 0, 0, 0.1);
		padding: 0 7px;
		background-color: whitesmoke;
	}
</style>

{% if has_validated_profile %}

	{% if (is_my_user_profile or i_am_valid_admin) %}

		<tr>
			<th><label for="shield_turn_off_google_authenticator">{{ strings.label_check_to_remove }}</label></th>
			<td>
				<input type="checkbox" name="shield_turn_off_google_authenticator"
					   id="shield_turn_off_google_authenticator" value="Y" />
				<p class="description">{{ strings.desc_remove }}</p>
			</td>
		</tr>
		<tr>
			<th><label for="{{ data.otp_field_name }}">{{ strings.label_enter_code }}</label></th>
			<td>
				<input class="regular-text"
					   type="text"
					   id="{{ data.otp_field_name }}"
					   name="{{ data.otp_field_name }}"
					   value="" autocomplete="off" />
				<p class="description">{{ strings.description_otp_code }}</p>
			</td>
		</tr>
	{% else %}
		<td>
			<p class="description">{{ strings.cant_remove_admins }}</p>
		</td>
	{% endif %}

{% else %}

	{% if is_my_user_profile %}
		<tr>
			<th>{{ strings.label_scan_qr_code }}</th>
			<td>
				<img src="{{ chart_url }}" />
				<p class="description">{{ strings.description_chart_url }}</p>
			</td>
		</tr>
		<tr>
			<th><label for="shield_ga_secret">{{ strings.label_ga_secret }}</label></th>
			<td>
				<span id="shield_ga_secret">{{ user_google_authenticator_secret }}</span>
				<p class="description">{{ strings.description_ga_secret }}</p>
			</td>
		</tr>
		<tr>
			<th><label for="{{ data.otp_field_name }}">{{ strings.label_enter_code }}</label></th>
			<td>
				<input class="regular-text"
					   type="text"
					   id="{{ data.otp_field_name }}"
					   name="{{ data.otp_field_name }}"
					   value="" autocomplete="off" />
				<p class="description">
					{{ strings.description_otp_code }}
					<br />{{ strings.description_otp_code_ext }}
				</p>
			</td>
		</tr>
	{% else %}
		<td>
			<p class="description">{{ strings.cant_add_other_user }}</p>
		</td>
	{% endif %}

{% endif %}