{% extends '/wpadmin_pages/insights/dashboard/card_std.twig' %}

{% block footer %}
	<div class="card-footer">
		<ul class="list-group list-group-flush">
			<li class="list-group-item">
				<select class="w-100" id="DashboardModSettingsSelect">
					<option value="-">-- {{ strings.select }} --</option>
					{% for mod in vars.mods %}
						{% if mod.show_mod_opts %}
							<option value="{{ mod.slug }}"
									data-href="{{ mod.href }}"
							>{{ mod.name }}</option>
						{% endif %}
					{% endfor %}
				</select>
			</li>
			<li class="list-group-item" id="SearchOptionsLaunch">
				<div class="text-nowrap">
					<span class="dashicons dashicons-search"></span>
					{% include '/snippets/select_search_options.twig' %}
				</div>
			</li>
		</ul>
	</div>

{% endblock %}