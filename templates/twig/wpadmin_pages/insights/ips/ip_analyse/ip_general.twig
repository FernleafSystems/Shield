<div class="row">

	<div class="col-6">
		<h6 class="mt-4">
			{{ strings.title_status }}
		</h6>
		<dl>
			<dt>{{ strings.status.who_is_it }}</dt>
			<dd>
				<p>{{ vars.status.who_is_it }}</p>
			</dd>

			<dt>{{ strings.status.offenses }}</dt>
			<dd>
				<p class="badge badge-{{ vars.status.offenses > 0 ? 'danger' : 'success' }}">
					{{ vars.status.offenses }}
				</p>
			</dd>

			<dt>{{ strings.status.is_blocked }}</dt>
			<dd>
				<p class="badge badge-{{ vars.status.is_blocked ? 'danger' : 'success' }}">
					{{ vars.status.is_blocked ? strings.yes : strings.no }}
				</p>
			</dd>

			<dt>{{ strings.status.is_bypass }}</dt>
			<dd>
				<p class="badge badge-{{ vars.status.is_bypass ? 'warning' : 'success' }}">
					{{ vars.status.is_bypass ? strings.yes : strings.no }}
				</p>
			</dd>
		</dl>
	</div>

	<div class="col-6">
		<h6 class="mt-4">{{ strings.title_general }}</h6>
		<dl>
			<dt>{{ strings.rdns }}</dt>
			<dd>
				<p>{{ vars.geo.rdns }}</p>
			</dd>
			<dt>{{ strings.country }}</dt>
			<dd>
				<p>{{ vars.geo.country_name }}</p>
			</dd>
			<dt>{{ strings.timezone }}</dt>
			<dd>
				<p>{{ vars.geo.timezone }}</p>
			</dd>
			<dt>{{ strings.coordinates }}</dt>
			<dd>
				<p>{{ vars.geo.coordinates }}</p>
			</dd>
		</dl>
	</div>

</div>