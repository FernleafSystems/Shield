{% if success %}
	{% if html.diff is empty %}
		<div class="alert alert-success m-0">{{ strings.no_changes }}</div>
	{% else %}
		<div class="alert alert-warning mb-3">
			<p class="m-0">{{ strings.please_review }}</p>
		</div>

		<div class="card-group">

			<div class="card">
				<div class="card-body">
					<h5 class="card-title">{{ strings.file_info }}</h5>
					<dl>
						<dt>{{ strings.time_locked }}</dt>
						<dd>{{ vars.time_locked }}</dd>
					</dl>
					<dl>
						<dt>{{ strings.time_detected }}</dt>
						<dd>{{ vars.time_detected }}</dd>
					</dl>
				</div>
			</div>

			<div class="card">
				<div class="card-body">
					<h5 class="card-title">{{ strings.file_download }}</h5>
					<dl>
						<dt>{{ strings.download_original }}</dt>
						<dd>{{ vars.time_locked }}</dd>
					</dl>
					<dl>
						<dt>{{ strings.download_current }}</dt>
						<dd>{{ vars.time_detected }}</dd>
					</dl>
				</div>
			</div>

			<div class="card">
				<div class="card-body">
					<h5 class="card-title">{{ strings.file_restore }}</h5>
					<form class="filelocker_fileaction">
						<div class="custom-control custom-checkbox">
							<input type="checkbox" class="custom-control-input"
								   id="ConfirmFileRestore"
								   name="ConfirmFileRestore"
								   value="Y"
							/>
							<label class="custom-control-label"
								   for="ConfirmFileRestore">{{ strings.file_restore_checkbox }}</label>
						</div>
						<input href="#"
							   type="submit" value="{{ strings.butt_restore }}"
							   data-action="restore"
							   data-rid="{{ vars.rid }}"
							   class="btn btn-outline-success btn-block btn-sm mt-3" />
					</form>
				</div>
			</div>

			<div class="card">
				<div class="card-body">
					<h5 class="card-title">{{ strings.file_accept }}</h5>
					<form class="filelocker_fileaction">
						<div class="custom-control custom-checkbox">
							<input type="checkbox" class="custom-control-input"
								   id="ConfirmFileAccept"
								   name="ConfirmFileAccept"
								   value="Y"
							/>
							<label class="custom-control-label"
								   for="ConfirmFileAccept">{{ strings.file_accept_checkbox }}</label>
						</div>
						<input href="#"
							   type="submit" value="{{ strings.butt_accept }}"
							   data-action="accept"
							   data-rid="{{ vars.rid }}"
							   class="btn btn-outline-danger btn-block btn-sm mt-3" />
					</form>
				</div>
			</div>

		</div>
		<hr />
		{{ html.diff|raw }}
	{% endif %}
{% else %}
	<div class="alert alert-warning m-0">{{ error }}</div>
{% endif %}