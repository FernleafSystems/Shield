{% extends '/wpadmin_pages/base.twig' %}

{% block h1heading %}<h1 style="display: none;">&nbsp;</h1>{% endblock %}

{% block page_head %}
	<div class="row">

		<div class="col">
			{% if flags.is_dashboard %}
				<h6 class="mt-4">{{ strings.dashboard_shield }}</h6>
			{% else %}
				<h6 class="mt-4">
					{{ strings.page_title }}
					<br />
					<small class="mt-1">
						<a href="{{ hrefs.back_to_dash }}"
						   class="text-primary"
						>&larr; Dashboard</a>
						{% if vars.related_pages|default([]) is not empty %}
							{% for href,title in vars.related_pages %}
								| <a href="{{ href }}">{{ title }}</a>
							{% endfor %}
						{% endif %}
					</small>
				</h6>
				<p class="mt-3">
				</p>
			{% endif %}
		</div>

		<div class="col">
			<a class="navbar-brand float-right mt-3"
			   href="{{ hrefs.nav_home }}"
			   id="navbar-bannerlogo"
			   style="background-image: url('{{ hrefs.img_banner }}');"
			>&nbsp;</a>
		</div>
	</div>

	{% include '/snippets/modal/search_options.twig' %}
	<script>
	  jQuery( document ).ready( function () {
		  jQuery.fn.selectpicker.Constructor.BootstrapVersion = '4';

		  jQuery( '.selectpicker' ).selectpicker()
								   .removeAttr( "selected" );
	  } );
	</script>
	<script async src="https://cdn.announcekit.app/widget.js"></script>
	{% include '/snippets/js/widget_freshdesk.twig' %}
{% endblock %}

{% block page_main %}
	<div class="row">
		<div class="col">
		</div>
	</div>
{% endblock %}

{% block page_foot %}
{% endblock %}

{% block inline_styles %}
{% endblock %}

{% block inline_scripts %}
{% endblock %}