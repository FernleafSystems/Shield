{% extends '/wpadmin_pages/base.twig' %}

{% block h1heading %}<h1 style="display: none;">&nbsp;</h1>{% endblock %}

{% block page_head %}
	<div class="row">

		<div class="col">
			{% if flags.is_dashboard %}
				<h5 class="mt-3">{{ strings.dashboard_shield }}</h5>
			{% else %}
				<h5 class="mt-3">
					{{ strings.page_title }}
					<br />
					<p class="mb-1 mt-2 d-inline-block" style="font-size: small">
						<a href="{{ hrefs.back_to_dash }}">&laquo; {{ strings.dashboard }}</a>
						{% if vars.related_hrefs|default([]) is not empty %}
							{% for related_href in vars.related_hrefs %}
								| <a href="{{ related_href.href }}"
									 {% if related_href.new|default(false) %}target="_blank"{% endif %}>
								{{ related_href.title }}</a>
							{% endfor %}
						{% endif %}
					</p>
				</h5>
			{% endif %}
		</div>

		<div class="col">
			<a class="navbar-brand float-right mt-3"
			   href="{{ hrefs.nav_home }}"
			   id="navbar-bannerlogo"
			   style="background-image: url('{{ hrefs.img_banner }}');"
			>&nbsp;</a>
		</div>
	</div>

	{% include '/snippets/modal/search_options.twig' %}
	<script>
	  jQuery( document ).ready( function () {
		  jQuery.fn.selectpicker.Constructor.BootstrapVersion = '4';

		  jQuery( '.selectpicker' ).selectpicker()
								   .removeAttr( "selected" );
	  } );
	</script>
	<script async src="https://cdn.announcekit.app/widget.js"></script>
	{% include '/snippets/js/widget_freshdesk.twig' %}
{% endblock %}

{% block page_main %}
	<div class="row">
		<div class="col">
		</div>
	</div>
{% endblock %}

{% block page_foot %}
{% endblock %}

{% block inline_styles %}
{% endblock %}

{% block inline_scripts %}
{% endblock %}