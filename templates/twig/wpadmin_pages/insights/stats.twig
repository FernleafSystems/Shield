<div class="row" id="SectionStats">
	{% for stat in vars.insight_stats %}
		<div class="col-md-3">
			<div class="stat card"
					{% if stat.tooltip is defined %}
						title="{{ stat.tooltip }}"
					{% endif %}
			>
				<div class="card-header">
					{{ stat.title }}
				</div>
				<div class="card-body">
					{{ stat.val }}
				</div>
			</div>
		</div>
	{% endfor %}
</div>

<script type="text/javascript">
	jQuery( document ).ready( function () {
		jQuery( '.stat.card' ).tooltip( {
			placement: 'bottom',
			trigger: 'hover'
		} );
	} );
</script>


